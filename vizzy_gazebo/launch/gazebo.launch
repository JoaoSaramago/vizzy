<?xml version="1.0"?>
<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
	<arg name="robot" default="vizzy"/> <!-- full, lower_body, foot -->
  <arg name="pose" default="-x 0.0 -y 0.0 -z 0.2 -R 0.0 -P 0.0 -Y 1.57"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="world" default="vizzy_test_world.world" />

	<env name="GAZEBO_MODEL_PATH" value="$(find vizzy_gazebo)/media:$(optenv GAZEBO_MODEL_PATH)"/>

	<!-- start up world -->
  <include file="$(find vizzy_gazebo)/launch/vizzy_sim_world.launch">
  	<arg name="use_sim_time" value="$(arg use_sim_time)" />
  	<arg name="gui" default="$(arg gui)" />
  	<arg name="world" default="$(arg world)" />
  </include>

  <!-- spawn the robot in simulation -->
  <include file="$(find vizzy_gazebo)/launch/vizzy_spawn.launch">
  	<arg name="pose" value="$(arg pose)"/>
  	<arg name="robot" value="$(arg robot)"/>
  </include>
  
  <!-- launch the laser filter to get rid of readings from the robot itself -->
  <!-- <include file="$(find vizzy_sensors)/launch/hokuyo/hokuyo-filters.launch" />-->

  <!-- launch the joint state publisher to default values -->
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

</launch>
