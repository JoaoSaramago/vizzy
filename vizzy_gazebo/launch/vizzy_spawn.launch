<?xml version="1.0"?>
<launch>
	<arg name="robot" default="vizzy"/>
	<arg name="pose" default="-x 0 -y 0 -z 0.85 -R 0.0 -P 0.0 -Y 0.0"/>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param command="$(find xacro)/xacro.py '$(find vizzy_description)/robots/vizzy-with-collisions.urdf.xacro'" name="robot_description" />
	 
	<!-- Spawn robot in Gazebo -->
	<node pkg="gazebo_ros" type="spawn_model" name="spawn_model" args="-urdf -param robot_description $(arg pose) -model $(arg robot)" />

	<!--<include file="$(find reemc_description)/robots/upload_reemc.launch">
	<arg name="robot" value="$(arg robot)"/>
	</include>-->

</launch>
